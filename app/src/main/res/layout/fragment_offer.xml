<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/nameET"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/dim_8dp"
            android:background="@drawable/designbutton"
            android:hint="@string/name"
            android:inputType="text"
            android:maxLines="1"
            android:paddingEnd="@dimen/dim_8dp"
            android:paddingStart="@dimen/dim_8dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            tools:ignore="LabelFor" />

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/designbutton"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:layout_marginBottom="8dp">

            <Spinner
                android:id="@+id/type_spinner"
                style="@style/Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                tools:ignore="UnusedAttribute" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/designbutton"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:layout_marginBottom="8dp">

            <Spinner
                android:id="@+id/dept_spinner"
                style="@style/Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                tools:ignore="UnusedAttribute" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lin3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/designbutton"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:layout_marginBottom="8dp">

            <Spinner
                android:id="@+id/city_spinner"
                style="@style/Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                tools:ignore="UnusedAttribute" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lin4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/designbutton"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:visibility="gone"
            android:layout_marginBottom="8dp">

            <Spinner
                android:id="@+id/distinct_spinner"
                style="@style/Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                tools:ignore="UnusedAttribute" />
        </LinearLayout>

        <EditText
            android:id="@+id/addressET"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/designbutton"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:hint="@string/address"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:maxLines="1"
            android:inputType="text"
            android:layout_marginBottom="8dp"
            tools:ignore="LabelFor" />

        <LinearLayout
            android:id="@+id/lin5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/lin51"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/designbutton"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:layout_weight="1"
                android:layout_marginEnd="2dp">

                <Spinner
                    android:id="@+id/bedroom_spinner"
                    style="@style/Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    tools:ignore="UnusedAttribute" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin52"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/designbutton"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:layout_weight="1"
                android:layout_marginStart="2dp">

                <Spinner
                    android:id="@+id/bathroom_spinner"
                    style="@style/Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    tools:ignore="UnusedAttribute" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/lin61"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/designbutton"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:layout_weight="1"
                android:layout_marginEnd="2dp">

                <Spinner
                    android:id="@+id/garage_spinner"
                    style="@style/Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    tools:ignore="UnusedAttribute" />
            </LinearLayout>

            <EditText
                android:id="@+id/areaET"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/designbutton"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:hint="@string/area"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:baselineAligned="false">

            <EditText
                android:id="@+id/priceET"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/designbutton"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:hint="@string/price"
                android:textAlignment="viewStart"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:layout_weight="2"
                android:layout_marginEnd="2dp"
                android:gravity="center"
                tools:ignore="LabelFor,RtlCompat" />
            <Button
                android:id="@+id/mapBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/designbutton"
                android:text="@string/map"
                android:textColor="@color/white"
                android:textStyle="bold"
               android:layout_weight="1"/>

        </LinearLayout>

        <EditText
            android:id="@+id/descriptionET"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/designbutton"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:hint="@string/description"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:inputType="textMultiLine"
            android:layout_marginBottom="8dp"
            android:scrollbars="vertical"
            tools:ignore="LabelFor" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp">
        <LinearLayout
            android:id="@+id/lin8"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img1_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/place_holder"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:layout_marginEnd="5dp"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/img2_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/place_holder"
                android:layout_weight="1"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/img3_item"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@drawable/place_holder"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:layout_marginStart="5dp"
                tools:ignore="ContentDescription" />
        </LinearLayout>

            <TextView
                android:id="@+id/txtImg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1"
                android:textSize="24sp"
                android:textColor="@color/Black"/>

            <TextView
                android:id="@+id/txtImg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_2"
                android:textSize="22sp"
                android:textColor="@color/Black"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/txtImg3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_3"
                android:textSize="22sp"
                android:textColor="@color/Black"
                android:layout_alignParentEnd="true"/>

            <ImageButton
                android:id="@+id/closeImg1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_close_24dp"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_alignParentBottom="true"/>

            <ImageButton
                android:id="@+id/closeImg2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_close_24dp"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"/>

            <ImageButton
                android:id="@+id/closeImg3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_close_24dp"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="@string/agree_the_privacy_policy"
            android:layout_marginBottom="16dp"/>
        <ProgressBar
            android:id="@+id/progerss2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/designbutton2"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center" />

    </LinearLayout>


</ScrollView>